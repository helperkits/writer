{
	"compilerOptions": {
		"target": "ESNext",
		"baseUrl": "./",
		"rootDir": "./",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"paths": {
			"@/writers/*": ["writers/*"],
		},
		"allowJs": true,
		"outDir": "build",
		"sourceMap": true,
		"esModuleInterop": true
	},
	"exclude": ["**/node_modules", "**/.*/", "**/build/"]
}
